        %img{:border => "0", :height => "54", :src => send_icon, :style => "margin:0; padding:0; border:none; display:block;", :width => "62"}/
    %tr
      %td{:align => "center", :valign => "top"}
        %p{:style => "font-size: 20px; font-weight: bold; letter-spacing: 1.25px;"}
