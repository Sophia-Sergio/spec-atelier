
- logo = "https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fspec-logo.jpg?alt=media"
- welcome_img ="https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fwelcome-img.jpg?alt=media"
- message_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fmessage.jpg?alt=media'
- unlock_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fpadlock.jpg?alt=media'
- pin_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fplaceholder.jpg?alt=media'
- send_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fsend.jpg?alt=media'
- smartphone_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fsmartphone.jpg?alt=media'
- world_icon = 'https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fworld.jpg?alt=media'

%body{:style => "margin:0; padding:0; font-family: Lato, Arial, Helvetica, sans-serif; background-color: #ffffff !important; color: #212121 !important;"}>
  / LOGO
  %table{:align => "center", :border => "0", :cellpadding => "0", :height => "80", :width => "80%", :bgcolor => "#ffffff", :style => "background-color: #ffffff; color: #212121 !important;"}
    %tr
      %td{:align => "left", :valign => "bottom", :bgcolor => "#ffffff"}
        %img{:border => "0", :height => "32", :src => logo, :style => "margin:0; padding:0; border:none; display:block;", :width => "160"}/
  / ICON MESSAGE
  %table{:align => "center", :border => "0", :cellpadding => "0", :style => "padding: 0 10% 0 10%;", :width => "100%"}
    %tr
      %td{:height => "60"}
         
  / CONTENT
  %table{:align => "center", :border => "0", :cellpadding => "0", :width => "100%", :bgcolor => "#ffffff"}
    %tr
      %td{:align => "center"}
        %img{:border => "0", :height => "54", :src => send_icon, :style => "margin:0; padding:0; border:none; display:block;", :width => "62"}/
    %tr
      %td{:align => "center", :valign => "top"}
        %p{:style => "font-size: 20px; font-weight: bold; letter-spacing: 1.25px;"}
          = "Hola #{@current_user.first_name},"
        %p{:style => "font-size: 14px; letter-spacing: 1px; margin: 2px;"}
          Tu mensaje fue enviado a
          = succeed "," do
            %strong= @brand.name
          pronto 
        %p{:style => "font-size: 14px; letter-spacing: 1px; margin: 2px;"}
          recibirás una respuesta.
        %p{:style => "font-size: 14px; letter-spacing: 1px; margin: 2px;"}
          Estos son los datos del colaborador:

  / SPACE
  %table{:border => "0", :cellpadding => "0", :width => "100%"}
    %tr
      %td{:height => "20"}
         
  / CONTACT BUTTONS
  %table{:align => "center", :border => "0", :cellpadding => "0", :height => "30", :width => "60%"}
    %tr
      %td{:align => "right"}
        %img{:border => "0", :height => "18", :src => world_icon, :style => "margin: 0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "18"}/
      - if @brand.url.present?
        = link_to 'Website', @brand.url, :style => "color: #19bea8; text-decoration: none; font-size: 12px; letter-spacing: 1px;", :target => "_blank"
      %td{:align => "center"}
        %img{:border => "0", :height => "18", :src => pin_icon, :style => "margin:0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "12"}/
         
        %a{:href => @brand.formatted_addresses, } Dirección
      %td{:align => "left"}
        %img{:border => "0", :height => "18", :src => smartphone_icon, :style => "margin:0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "12"}/
         
        %a{:href => @brand.phone, :style => "color: #19bea8; text-decoration: none; font-size: 12px; letter-spacing: 1px;", :target => "_blank"}
          = "Teléfono: #{@brand.phone}"

  / SPACE
  %table{:border => "0", :cellpadding => "0", :width => "100%"}
    %tr
      %td{:height => "80"}

  / MESSAGE
  %table{:align => "center", :border => "0", :cellpadding => "10%", :cellspacing => "0", :width => "80%"}
    %tr{:style => "background-color: #f6f6f6;"}
      %td{:style => "padding: 0 10%;"}
        %p{:style => "font-size: 14px; letter-spacing: 1px;"}
          Este fue tu mensaje:
    %tr{:style => "background-color: #f6f6f6;"}
      %td{:style => "padding: 0 10% 12px 10%;"}
        %p{:style => "font-size: 14px; letter-spacing: 1px; height: 80px; background-color: #ffffff; padding: 16px; color: #d6d6d6; border-radius: 4px; border: solid 1px #d6d6d6;"}
          = @form.message

  / SPACE
  %table{:border => "0", :cellpadding => "0", :width => "100%"}
    %tr
      %td{:height => "80"}

  / FOOTER
  %table{:align => "center", :bgcolor => "#08262c", :border => "0", :cellpadding => "20", :height => "72", :width => "100%", :style => "opacity: 1;"}
    %tr
      %td{:align => "left"}
        %img{:border => "0", :height => "18", :src => "https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Femail.jpg?alt=media", :style => "margin: 0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "18"}
        %a{:href => "mailito:contacto@specatelier.com", :style => "color:#19bea8; text-decoration: none; font-size: 12px; letter-spacing: 1px;", :target => "_blank"} contacto@specatelier.com
      %td{:align => "left"}
        %img{:border => "0", :height => "18", :src => "https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Fwhatsapp.jpg?alt=media", :style => "margin:0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "18"}
        %a{:href => "tel:+56987654321", :style => "color:#19bea8; text-decoration: none; font-size: 12px; letter-spacing: 1px;", :target => "_blank"} +56 9 8765 4321
      %td{:align => "right"}
        %a{:href => "#{ENV["FRONT_DOMAIN"]}", :style => "color:#19bea8; text-decoration: none; font-size: 12px; letter-spacing: 1px;", :target => "_blank"}
          Síguenos en;
          %img{:border => "0", :height => "18", :src => "https://firebasestorage.googleapis.com/v0/b/spec-atelier/o/spec_images%2Finstagram.jpg?alt=media", :style => "margin:0 4px 0 0; padding:0; border:none; display: inline-block;", :width => "18"}
